<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardInfoActivity"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:layout_above="@id/moreInfo"
        tools:ignore="ContentDescription"
        tools:src="@drawable/backofcard" />

    <TextView
        android:id="@+id/image_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/moreInfo"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:padding="5dp"
        tools:text="1/10" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/moreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/relatedCards"
        android:backgroundTint="@color/colorAccent"
        android:layout_toStartOf="@id/image_count"
        android:text="More Info" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/relatedCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorAccent"
        android:text="Related Cards"
        android:textColor="#000" />

